@model IEnumerable<Open.Logic.OrderClasses.OrderViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateOrder")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UniqueId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalesChannel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TermsAndConditions)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UniqueId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesChannel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermsAndConditions)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditOrder", new { id=item.UniqueId }) |
                @Html.ActionLink("Details", "OrderDetails", new { id=item.UniqueId }) |
                @Html.ActionLink("Delete", "DeleteOrder", new { id=item.UniqueId })
            </td>
        </tr>
    }
</table>